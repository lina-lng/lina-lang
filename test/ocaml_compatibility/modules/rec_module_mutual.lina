(* Mutually recursive modules *)

module rec Even : sig
  val check : int -> bool
end = struct
  let check n =
    if n = 0 then true
    else Odd.check (n - 1)
end

and Odd : sig
  val check : int -> bool
end = struct
  let check n =
    if n = 0 then false
    else Even.check (n - 1)
end

let _ = print (Even.check 4)
let _ = print (Odd.check 3)
