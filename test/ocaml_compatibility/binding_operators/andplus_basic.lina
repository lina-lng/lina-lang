(* Binding operators: basic and+ *)
(* Expected: ACCEPT - and+ with let+ *)

type 'a option = None | Some of 'a

let ( let+ ) opt f = match opt with
  | None -> None
  | Some x -> Some (f x)

let ( and+ ) a b = match a with
  | None -> None
  | Some x -> match b with
    | None -> None
    | Some y -> Some (x, y)

let result =
  let+ x = Some 3
  and+ y = Some 4 in
  x * y

let _ = match result with
  | None -> print "none"
  | Some n -> print n
