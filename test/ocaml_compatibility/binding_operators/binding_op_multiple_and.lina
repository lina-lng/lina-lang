(* Binding operators: multiple and* clauses *)
(* Expected: ACCEPT - chained and* *)

type 'a option = None | Some of 'a

let ( let* ) opt f = match opt with
  | None -> None
  | Some x -> f x

let ( and* ) a b = match a with
  | None -> None
  | Some x -> match b with
    | None -> None
    | Some y -> Some (x, y)

let result =
  let* a = Some 1
  and* b = Some 2
  and* c = Some 3 in
  Some (a + b + c)

let _ = match result with
  | None -> print "none"
  | Some n -> print n
