(* Alias patterns: alias with constructor *)
(* Expected: ACCEPT - (Some x as opt) binds both x and opt *)

type 'a option = None | Some of 'a

let get_or_default = fun opt -> fun default ->
  match opt with
  | (Some x as opt) -> (x, opt)
  | None -> (default, None)

let (v, opt) = get_or_default (Some 42) 0
let _ = print v
