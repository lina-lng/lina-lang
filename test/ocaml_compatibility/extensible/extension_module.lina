(* Extension constructors added in a module *)

type action = ..

module Actions = struct
  type action += Save | Load of string | Delete of int
end

let describe a =
  match a with
  | Actions.Save -> "save"
  | Actions.Load path -> "load"
  | Actions.Delete id -> "delete"
  | _ -> "unknown"

let _ = print (describe Actions.Save)
let _ = print (describe (Actions.Load "file.txt"))
let _ = print (describe (Actions.Delete 42))
